<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>HostPilot Web Application</display-name>
    <description>Sistema de gestión HostPilot con arquitectura MVC, DAO, SOLID</description>

    <!-- Parámetro de contexto (opcional) -->
    <context-param>
        <param-name>environment</param-name>
        <param-value>development</param-value>
    </context-param>

    <!-- Configuración de la Sesión -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- minutos -->
        <cookie-config>
            <http-only>true</http-only>
            <!-- En producción, esto debería ser 'true' si usas HTTPS -->
            <secure>false</secure> 
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- ======================================================= -->
    <!--                  FILTROS GLOBALES                       -->
    <!-- ======================================================= -->

    <!-- Filtro para forzar la codificación UTF-8 en todas las peticiones -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Filtro de Seguridad Personalizado -->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.hostpilot.security.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
 

    <!-- Página de bienvenida -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Páginas de Error Personalizadas -->
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/error/403.jsp</location> <!-- Movido a una carpeta segura -->
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/404.jsp</location> <!-- Movido a una carpeta segura -->
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error/500.jsp</location> <!-- Movido a una carpeta segura -->
    </error-page>

    <!-- Mapeos MIME (generalmente no son necesarios en servidores modernos como Tomcat) -->
    <!-- Los he dejado por si los necesitas por alguna razón específica -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>svg</extension>
        <mime-type>image/svg+xml</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>font/woff2</mime-type>
    </mime-mapping>

</web-app>